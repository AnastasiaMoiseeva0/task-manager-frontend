name: deploy task manager app
on:
  push:
    branches: [ "dev-new" ]
  pull_request:
    branches: [ "dev-new" ]

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  install:
    runs-on: ubuntu-latest
    steps:
      - name: Get repository code
        uses: actions/checkout@v4
      - name: Install deps
        run: npm ci
  build:
    runs-on: ubuntu-latest
    steps:
      needs: install
      - name: Build code
        run: npm run build
      - name: Deploy
        run: echo deploying...
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
